<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>

<VBox spacing="10"
      alignment="CENTER"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.restaurant_final.HelloController">

    <Label text="Модель кухни ресторана быстрого питания"/>

    <CheckBox fx:id="grillCheck" text="Гриль"/>
    <CheckBox fx:id="fryerCheck" text="Фритюрница"/>
    <CheckBox fx:id="ovenCheck" text="Печь"/>
    <CheckBox fx:id="drinkCheck" text="Напитки"/>

    <Button text="Создать заказ" onAction="#onCreateOrder"/>

    <TextArea fx:id="outputArea"
              prefWidth="380"
              prefHeight="250"/>

</VBox>
